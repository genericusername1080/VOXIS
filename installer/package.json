{
  "name": "voxis-installer",
  "productName": "VOXIS",
  "version": "4.0.0",
  "description": "VOXIS Always-On Audio Restoration - Powered by Trinity v8.1 - Built by Glass Stone",
  "homepage": "https://github.com/genericusername1080/VOXIS",
  "author": {
    "name": "Gabriel Rodriguez",
    "email": "gabriel@glassstone.io"
  },
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --arm64 --x64",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:all": "electron-builder --mac --arm64 --x64 && electron-builder --win --x64 && electron-builder --linux --x64"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "ffmpeg-static": "^5.3.0"
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "build": {
    "appId": "com.glassstone.voxis",
    "compression": "normal",
    "productName": "VOXIS",
    "copyright": "Copyright Â© 2026 Glass Stone",
    "afterPack": "./afterPack.js",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/voxis_backend",
        "to": "backend/dist/voxis_backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/models/TrinityDenoise",
        "to": "backend/models/TrinityDenoise",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/models/TrinityRestore",
        "to": "backend/models/TrinityRestore",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/models/TrinityDense",
        "to": "backend/models/TrinityDense",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/models/TrinityDiffusion",
        "to": "backend/models/TrinityDiffusion",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/bin",
        "to": "backend/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.png",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "maintainer": "Gabriel Rodriguez <gabriel@glassstone.io>",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerLanguages": [
        "en_US"
      ],
      "license": "../TERMS_OF_USE.md"
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "iconSize": 80,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 140,
          "y": 200
        },
        {
          "x": 460,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "${productName} v${version}"
    },
    "publish": {
      "provider": "github",
      "owner": "genericusername1080",
      "repo": "VOXIS",
      "releaseType": "release"
    }
  }
}