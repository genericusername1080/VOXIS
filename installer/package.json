{
  "name": "voxis-dense-installer",
  "productName": "VOXIS Dense",
  "version": "4.0.0",
  "description": "VOXIS 4 Dense â€” Audio Restoration Desktop App",
  "homepage": "https://github.com/genericusername1080/VOXIS",
  "author": {
    "name": "Gabriel Rodriguez",
    "email": "gabriel@glassstone.io"
  },
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.glassstone.voxis.dense",
    "productName": "VOXIS Dense",
    "copyright": "Copyright (c) 2026 Glass Stone",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/voxis_backend",
        "to": "backend/dist/voxis_backend",
        "filter": ["**/*"]
      },
      {
        "from": "../dist",
        "to": "dist",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "maintainer": "Gabriel Rodriguez <gabriel@glassstone.io>",
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "iconSize": 80,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 140,
          "y": 200
        },
        {
          "x": 460,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "${productName} v${version}"
    }
  }
}
